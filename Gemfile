source "https://rubygems.org"

# Required for unit testing
gem 'puppet'
gem 'rake', :require => false, :group => :test
gem 'puppet-lint', :require => false, :group => :test
gem 'puppetlabs_spec_helper', :require => false, :group => :test
gem 'rspec-puppet', :require => false, :group => :test

# Required for the module itself
gem 'parseconfig'
gem 'filecache'
gem 'logging'

# Though we don't call soap4r methods directly, installing the
# module makes several soap+ssl warnings dissapear
gem 'soap4r'

